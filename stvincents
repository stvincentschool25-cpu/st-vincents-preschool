        function renderTestimonials() {
            if (!slider) return;
            slider.innerHTML = testimonials.map(t => `
                <div class="testimonial-slide p-4 flex-shrink-0">
                    <div class="bg-yellow-100 p-8 rounded-xl crayon-border text-center">
